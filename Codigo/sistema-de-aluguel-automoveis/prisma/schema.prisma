generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


//Considere manter consistência de nomes (singular/plural) em todo o schema. Por exemplo, o campo alugueis em Contratante e Automovel está no plural, mas a tabela principal é singular. Avalie se todos os nomes seguem o mesmo padrão semântico.
model Usuario {
  id        Int    @id @default(autoincrement())
  email     String @unique
  senha     String
  categoria String
}

//Poderia haver validações adicionais, como @db.VarChar(length) para limitar o tamanho das strings (por exemplo, cpf com 11 caracteres e placa com 7 ou 8). Isso ajuda a manter a integridade de dados e evita desperdício de armazenamento.
model Contratante {
  id                  Int       @id @default(autoincrement())
  name                String
  rg                  String    @unique
  cpf                 String    @unique
  profissao           String
  entidadeEmpregadora String
  alugueis            Aluguel[]
}

//Seria interessante adicionar validações de integridade adicionais, como @db.VarChar(length) ou constraints de check, para campos como numeroRegistro. Isso evita entradas inválidas e garante consistência de dados, especialmente para campos críticos de identificação.
model Aluguel {
  id             Int         @id @default(autoincrement())
  dataInicio     DateTime
  dataFim        DateTime
  numeroRegistro String      @unique
  automovelId    Int
  automovel      Automovel   @relation(fields: [automovelId], references: [id])
  contratanteId  Int
  contratante    Contratante @relation(fields: [contratanteId], references: [id])
}

model Automovel {
  id        Int       @id @default(autoincrement())
  matricula String    @unique
  marca     String
  modelo    String
  ano       Int
  placa     String    @unique
  alugueis  Aluguel[]
}
